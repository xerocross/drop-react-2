{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 4],
        "quotes" : "off",
        "semi" : ["error", "always"],
        "key-spacing": ["error", {
            "beforeColon": true,
            "afterColon": true,
            "mode": "strict"
          }],
        "object-shorthand" : "off",
        "no-prototype-builtins" : "off",
        "no-debugger" : "off"
    },
    "globals": {
        "describe": "readonly",
        "it": "readonly",
        "expect" : "readonly",
        "jest" : "readonly",
        "beforeEach" : "readonly",
        "test" : "readonly",
        "afterEach" : "readonly"
      }
}
